export TOKEN="$TOKEN"   # make it an env var
python - <<'PY'
import os, json, base64
t=os.environ['TOKEN'].split('.')[1]; t+='='*(-len(t)%4)
p=json.loads(base64.urlsafe_b64decode(t))
print("iss =",p.get("iss")); print("aud =",p.get("aud"))
print("azp =",p.get("azp")); print("scope =",p.get("scope"))
PY